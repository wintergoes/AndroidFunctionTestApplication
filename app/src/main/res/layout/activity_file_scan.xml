<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FileScanActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnStartScanByWhile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onScanFileByWhileLoop"
                android:text="使用while循环" />

            <Button
                android:id="@+id/btnStopScanByWhile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onScanByWhileClick"
                android:text="停止测试" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnScanAndSaveToTreeNode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onScanAndSaveToTreeNodeClick"
                android:text="扫描并保存到TreeNode" />

            <Button
                android:id="@+id/btnStopScanAndSaveToTreeNode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onStopScanFileWithTreeNodeClick"
                android:text="停止测试" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnScanFileWithHashMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onScanFileWithHashMap"
                android:text="扫描并保存到HashMap" />

            <Button
                android:id="@+id/btnStopScanFileWithHashMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onStopScanFileWithHashMap"
                android:text="停止测试" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</LinearLayout>